
<h1>小タスク一覧</h1>
<%= link_to "小タスク作成" , new_admin_task_path %>

<% if @tasks.present? %>
  <table>
    <thead>
      <tr>
        <th>小タスク名</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td><%= link_to "編集", edit_admin_task_path(task) %></td>
          <td><%= link_to "削除", admin_task_path(task), method: :delete%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>小タスクを登録してください</p>
<% end %>