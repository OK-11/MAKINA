<div class="admin_task_index">
  <nav>
    <div class="nav_1">
      <%= link_to admin_users_path do %>
        <button type="button" class="nav_button btn"><%= image_tag "home_icon.png", alt: "ホームアイコン"%>MAKINA</button>
      <% end %>
      <%= link_to new_admin_task_path do %>
        <button type="button" class="nav_button btn mt-4"><%= image_tag "task.png", alt: "小タスクアイコン"%>小タスク生成</button>
      <% end %>
    </div>
    <div class="nav_2">
      <div class="nav_2_border"></div>
        <%= link_to admin_users_path do %>
          <button type="button" class="nav_button btn"><%= image_tag "back_icon.png", alt: "戻るアイコン"%>戻る</button>
        <% end %>
      </div>
  </nav>

  <div class="space"></div>

  <main>
    <div class="main_frame">
      <h1>小タスク一覧</h1>
      <%= flash[:alert] %>

      <div class="square_line">
        <% @tasks.each do |task| %>
          <div class="task_square">
            <div><%= task.name %></div>
            <div class="d-flex">
              <div><%= link_to "編集", edit_admin_task_path(task) %></div>
              <div>&nbsp;/&nbsp;</div>
              <div><%= link_to "削除", admin_task_path(task), method: :delete%></div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </main>
</div>

