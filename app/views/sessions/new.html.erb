<div class="session_new">

  <h1>ログイン</h1>

  <div class="container-fluid">
    <div class="row login_form">
      <div class="col-9 col-md-3 no-padding">
        <%= form_with(scope: :session, url: sessions_path) do |form| %>
          <div>
            <%= form.label :email, "メールアドレス", class: "form-label" %>
            <%= form.email_field :email, class: "form-control" %>
          </div>

          <div>
            <%= form.label :password, "パスワード", class: "form-label" %>
            <%= form.password_field :password, class: "form-control" %>
          </div>

          <div class="login_btn">
            <%= form.submit "ログイン", class: "btn btn-outline-dark" %>
          </div>

          <div class="newUser_btn">
            <%= link_to "新規登録", new_user_path, class: "btn btn-light" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
  

</div>
